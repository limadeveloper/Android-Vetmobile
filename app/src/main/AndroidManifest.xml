<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.vetmobile.com.vet">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".Configuration"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label=""
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/text_client"
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".RegisterPetActivity"
            android:label="@string/text_pet"
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".RegisterMoreInfoVetActivity"
            android:label=""
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".HomeClientActivity"
            android:label=""
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".HomeVetActivity"
            android:label=""
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".MarkAssistanceActivity"
            android:label=""
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".MarkAssistanceVetDetailsActivity"
            android:label=""
            android:theme="@style/AppCompat.FullScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>